<div class="container mt-5">
  <div class="row">
    <h2>Transfer money</h2>
    <div class="col-md-6">
      <%= form_for @transaction do |f| %>
        <div class="form-group mb-3">
          <%= f.select :from_bank_account_id, current_user.bank_accounts.collect {|bank_account| [bank_account.account, bank_account.id ] }, {include_blank: 'Select bank account'}, class: 'height-38 form-control' %>
        </div>
        <div class="form-group mb-3">
          <%= f.text_field :to_bank_account, autocomplete: 'off',
                            class: 'form-control',
                            placeholder: 'Example: 1234-1234-1234-1234', required: true, value: @transaction.to_bank_account&.account %>
        </div>
        <div class="form-group mb-3">
          <%= f.number_field :amount, autocomplete: 'off',
                              class: 'form-control',
                              placeholder: 'Transfer amount', required: true %>
        </div>

        <%= f.submit 'Transfer', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
